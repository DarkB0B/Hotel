<Window x:Class="Hotel.Pokojewin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hotel"
        mc:Ignorable="d"
        Title="Pokoje" Height="500" Width="650">
    <Grid Margin="0,10,2,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="0*"/>
        </Grid.ColumnDefinitions>
        <DataGrid Name="grdPokoje" Height="362" Margin="150,53,10,0" VerticalAlignment="Top"/>
        <Label Content="" x:Name="Pokoje_L" HorizontalAlignment="Left" Margin="320,14,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.843,-0.707" FontSize="18" Height="34" Width="221">
        </Label>
        <Button Content="Zajęte Pokoje" Click="ZajetePokoje_Click" HorizontalAlignment="Left" Margin="22,256,0,0" VerticalAlignment="Top" Width="109" Height="24"/>
        <Button Content="Wolne Pokoje" Click="WolnePokoje_Click" HorizontalAlignment="Left" Margin="22,142,0,0" VerticalAlignment="Top" Width="109" Height="24"/>
        <Button Content="Wszystkie Pokoje" Click="WszystkiePokoje_Click" HorizontalAlignment="Left" Margin="22,196,0,0" VerticalAlignment="Top" Width="109" Height="25"/>

    </Grid>
</Window>
