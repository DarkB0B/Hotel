<Window x:Class="Hotel.Klienciwin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hotel"
        mc:Ignorable="d"
        Title="Klienci" Height="450" Width="800">
    <Grid>
        <DataGrid Name="grdKlienci" HorizontalAlignment="Left" Height="361" Margin="172,58,-2,0" VerticalAlignment="Top" Width="622" RenderTransformOrigin="0.5,0.5">
            <DataGrid.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0.204"/>
                    <TranslateTransform/>
                </TransformGroup>
            </DataGrid.RenderTransform>
        </DataGrid>
        <Button Content="Wszyscy Klienci" Click="WszyscyKlienci_Click " HorizontalAlignment="Left" VerticalAlignment="Top" Width="92" Margin="66,190,0,0" Height="40" />
        <Button Content="Aktualni Klienci" Click="AktualniKlienci_Click" HorizontalAlignment="Left" VerticalAlignment="Top" Width="92" Margin="66,244,0,0" Height="40"/>

        <Label x:Name="Klienci_L" Content="" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="3.043,1.277" Margin="403,10,0,0" FontSize="18"/>

    </Grid>
</Window>
